<style>
  .image-blocks-section {
    /* Padding controlled via section settings */
    margin-top: {{ section.settings.top_padding }}px;
    margin-bottom: {{ section.settings.bot_padding }}px;
    background-color: {{ section.settings.section_bg }};
    padding: 20px 0;
  }

  .image-blocks-grid {
    display: grid;
    grid-template-columns: repeat(var(--blocks-per-row, 2), 1fr);
    gap: var(--grid-gap, 20px);
    margin: 0 auto;
  }

  .image-block {
    position: relative;
    overflow: hidden;
    transition: transform var(--duration-long) ease;
  }

  .image-block:hover {
    transform: translateY(-4px);
  }

  .image-block__wrapper {
    position: relative;
    min-height: 500px;
    display: flex;
    width: 100%;
  }

  .image-block__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .image-block__background .image-block__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--duration-extended) ease;
  }

  .image-block:hover .image-block__background .image-block__img {
    transform: scale(1.05);
  }

  .image-block__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
    display: block;
    transition: opacity var(--duration-long) ease;
  }

  .image-block:hover .image-block__overlay {
    opacity: 0.8;
  }

  .image-block__content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: var(--align-items, flex-start);
    justify-content: var(--justify-content, flex-start);
    text-align: var(--text-align, left);
    padding: 40px;
    width: 100%;
    gap: 16px;
    transition: transform var(--duration-long) ease;
  }

  .image-block:hover .image-block__content {
    transform: translateY(-8px);
  }

  .image-block__content-wrapper {
    display: flex;
    flex-direction: column;
    text-align: var(--text-align, left);
  }

  .image-block__title {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    max-width: 100%;
  }

  .image-block__description {
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
    max-width: 100%;
  }

  .image-block__button-wrapper {
    display: block;
    width: 100%;
  }

  .image-block__button {
    display: inline-block;
    padding: 12px 32px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ section.settings.btn_radius }}px;
    transition: all var(--duration-long) ease;
    cursor: pointer;
    border: none;
    transform: translateY(0);
  }

  .image-block__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* Responsive adjustments */
  @media screen and (max-width: 989px) {
    .image-blocks-grid {
      grid-template-columns: repeat(min(var(--blocks-per-row, 2), 2), 1fr);
    }

    .image-block__wrapper {
      min-height: 350px;
    }

    .image-block__content {
      padding: 30px;
    }

    .image-block__title {
      font-size: 28px;
    }
  }

  @media screen and (max-width: 749px) {
    .image-blocks-grid {
      grid-template-columns: 1fr;
    }

    .image-block__wrapper {
      min-height: 300px;
    }

    .image-block__content {
      padding: 24px;
    }

    .image-block__title {
      font-size: 24px;
    }

    .image-block__description {
      font-size: 14px;
    }

    .image-block__button {
      padding: 10px 24px;
      font-size: 14px;
    }
  }
</style>

<div class="image-blocks-section">
  <div>
    <div class="page-width">
      <div
        class="image-blocks-grid"
        style="--blocks-per-row: {{ section.settings.blocks_per_row }}; --grid-gap: {{ section.settings.gap }}px;"
      >
        {%- for block in section.blocks -%}
          <div
            class="image-block{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}{% if settings.animations_hover_elements != 'none' %} animate--hover-{{ settings.animations_hover_elements }}{% endif %}"
            {{ block.shopify_attributes }}
            style="border-radius: {{ settings.block_border_radius }}px;{% if settings.animations_reveal_on_scroll %} --animation-order: {{ forloop.index }};{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}
          >
            <div class="image-block__wrapper">
              {%- if block.settings.image != blank -%}
                <div class="image-block__background">
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag: loading: 'lazy', class: 'image-block__img'
                  }}
                </div>
              {%- endif -%}

              <div
                class="image-block__overlay"
                style="background-color: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"
              >
                &nbsp;
              </div>

              <div
                class="image-block__content"
                style="--align-items: {{ block.settings.align_items }}; --justify-content: {{ block.settings.justify_content }}; --text-align: {{ block.settings.text_align }};"
              >
                <div class="image-block__content-wrapper">
                  {%- if block.settings.title != blank -%}
                    <h3 class="image-block__title" style="color: {{ block.settings.text_color }};">
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.description != blank -%}
                    <div class="image-block__description" style="color: {{ block.settings.text_color }};">
                      {{ block.settings.description }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.button_label != blank -%}
                    <div class="image-block__button-wrapper">
                      <a
                        href="{{ block.settings.button_link }}"
                        class="image-block__button"
                        style="background-color: {{ block.settings.button_bg }}; color: {{ block.settings.button_text_color }}; border-radius: {{ section.settings.btn_radius }}px;"
                        data-hover-bg="{{ block.settings.button_hover_bg }}"
                        onmouseover="this.style.backgroundColor='{{ block.settings.button_hover_bg }}'"
                        onmouseout="this.style.backgroundColor='{{ block.settings.button_bg }}'"
                      >
                        {{ block.settings.button_label }}
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

