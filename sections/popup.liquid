<style>
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
    backdrop-filter: blur(4px);
  }

  .popup-overlay.active {
    display: flex;
    opacity: 1;
  }

  .popup-container {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border-radius: {{ section.settings.border_radius }}px;
    max-width: {{ section.settings.popup_width }}px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: scale(0.7);
    transition: transform 0.3s ease;
  }

  .popup-overlay.active .popup-container {
    transform: scale(1);
  }

  .popup-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: {{ section.settings.close_button_color }};
    border: none;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: transform 0.2s ease, opacity 0.2s ease;
    opacity: 0.8;
  }

  .popup-close:hover {
    transform: scale(1.1);
    opacity: 1;
  }

  .popup-close svg {
    width: 18px;
    height: 18px;
    stroke: {{ section.settings.close_button_icon_color }};
  }

  .popup-content {
    padding: {{ section.settings.padding }}px;
  }

  .popup-image-wrapper {
    width: 100%;
    margin-bottom: 25px;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .popup-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .popup-badge {
    display: inline-block;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_text_color }};
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .popup-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
  }

  .popup-text {
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.6;
    margin-bottom: 25px;
    opacity: 0.9;
  }

  .popup-discount-code {
    background: {{ section.settings.discount_background }};
    color: {{ section.settings.discount_text_color }};
    padding: 18px 25px;
    border-radius: 8px;
    border: 2px dashed {{ section.settings.discount_border_color }};
    text-align: center;
    margin-bottom: 25px;
    position: relative;
    overflow: hidden;
  }

  .popup-discount-code.blurred {
    filter: blur(8px);
    transition: filter 0.3s ease;
  }

  .popup-discount-code.revealed {
    filter: none;
  }

  .popup-discount-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(248, 249, 250, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 600;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .popup-discount-overlay.hidden {
    display: none;
  }

  .popup-discount-label {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
    opacity: 0.8;
  }

  .popup-discount-value {
    font-size: 28px;
    font-weight: 700;
    letter-spacing: 2px;
    font-family: monospace;
  }

  .popup-form {
    margin-bottom: 20px;
  }

  .popup-form input[type="email"] {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid {{ section.settings.input_border_color }};
    border-radius: 6px;
    font-size: 15px;
    margin-bottom: 12px;
    transition: border-color 0.2s ease;
    background: {{ section.settings.input_background }};
    color: {{ section.settings.text_color }};
  }

  .popup-form input[type="email"]:focus {
    outline: none;
    border-color: {{ section.settings.button_background }};
  }

  .popup-button {
    width: 100%;
    padding: 16px 30px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .popup-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .popup-footer {
    text-align: center;
    font-size: 12px;
    opacity: 0.7;
    margin-top: 20px;
  }

  @media (max-width: 768px) {
    .popup-container {
      width: 95%;
      max-height: 85vh;
    }

    .popup-heading {
      font-size: {{ section.settings.heading_size | minus: 6 }}px;
    }

    .popup-content {
      padding: 30px 20px;
    }
  }
</style>

{% if section.settings.enable_popup %}
  <div class="popup-overlay" id="popup-{{ section.id }}" data-popup-section>
    <div class="popup-container">
      <button class="popup-close" aria-label="Close popup">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="popup-content">
        {% if section.settings.image != blank %}
          <div class="popup-image-wrapper">
            <img
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
            >
          </div>
        {% endif %}

        {% if section.settings.badge_text != blank %}
          <div class="popup-badge">{{ section.settings.badge_text }}</div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="popup-heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="popup-text">{{ section.settings.text }}</div>
        {% endif %}

        {% if section.settings.show_discount and section.settings.discount_code != blank %}
          <div class="popup-discount-code blurred" id="popup-discount-code-{{ section.id }}">
            <div class="popup-discount-overlay" id="popup-discount-overlay-{{ section.id }}">
              Submit Email to Reveal
            </div>
            <div class="popup-discount-label">{{ section.settings.discount_label }}</div>
            <div class="popup-discount-value">{{ section.settings.discount_code }}</div>
          </div>
        {% endif %}

        {% if section.settings.show_email_form %}
          <form class="popup-form" id="popup-form-{{ section.id }}">
            <input
              type="email"
              name="email"
              placeholder="{{ section.settings.email_placeholder }}"
              required
            >
            <button type="submit" class="popup-button">
              {{ section.settings.button_text }}
            </button>
          </form>
        {% else %}
          <a href="{{ section.settings.button_link }}" class="popup-button" style="display: block; text-decoration: none; text-align: center;">
            {{ section.settings.button_text }}
          </a>
        {% endif %}

        {% if section.settings.footer_text != blank %}
          <div class="popup-footer">{{ section.settings.footer_text }}</div>
        {% endif %}
      </div>
    </div>
  </div>

  <script>
    (function() {
      const popup = document.getElementById('popup-{{ section.id }}');
      const closeBtn = popup.querySelector('.popup-close');
      const overlay = popup;
      const popupForm = document.getElementById('popup-form-{{ section.id }}');
      
      const settings = {
        delay: {{ section.settings.delay | times: 1000 }},
        showOnce: {{ section.settings.show_once }},
        triggerType: '{{ section.settings.trigger_type }}',
        scrollPercentage: {{ section.settings.scroll_percentage }},
        frequency: '{{ section.settings.frequency }}'
      };

      const STORAGE_KEY = 'popup-{{ section.id }}-shown';

      function shouldShowPopup() {
        const lastShown = localStorage.getItem(STORAGE_KEY);
        
        if (!lastShown) return true;
        
        if (settings.frequency === 'always') return true;
        if (settings.frequency === 'once') return false;
        
        const lastShownDate = new Date(parseInt(lastShown));
        const now = new Date();
        
        if (settings.frequency === 'daily') {
          return now.getDate() !== lastShownDate.getDate() || 
                 now.getMonth() !== lastShownDate.getMonth() ||
                 now.getFullYear() !== lastShownDate.getFullYear();
        }
        
        if (settings.frequency === 'session') {
          return false;
        }
        
        return true;
      }

      function showPopup() {
        if (!shouldShowPopup()) return;
        
        popup.classList.add('active');
        document.body.style.overflow = 'hidden';
        
        if (settings.showOnce || settings.frequency !== 'always') {
          localStorage.setItem(STORAGE_KEY, Date.now().toString());
        }
      }

      function hidePopup() {
        popup.classList.remove('active');
        document.body.style.overflow = '';
      }

      function handleScroll() {
        const scrolled = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
        if (scrolled >= settings.scrollPercentage) {
          showPopup();
          window.removeEventListener('scroll', handleScroll);
        }
      }

      function handleExitIntent(e) {
        if (e.clientY <= 0) {
          showPopup();
          document.removeEventListener('mouseout', handleExitIntent);
        }
      }

      // Close popup
      closeBtn.addEventListener('click', hidePopup);
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          hidePopup();
        }
      });

      // ESC key to close
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && popup.classList.contains('active')) {
          hidePopup();
        }
      });

      // Handle form submission
      if (popupForm) {
        popupForm.addEventListener('submit', (e) => {
          e.preventDefault();
          const email = popupForm.querySelector('input[type="email"]').value;
          
          // Here you can integrate with your email service provider
          // For now, we'll just show a success message
          console.log('Email submitted:', email);
          
          // Reveal the discount code
          const discountCode = document.getElementById('popup-discount-code-{{ section.id }}');
          const discountOverlay = document.getElementById('popup-discount-overlay-{{ section.id }}');
          
          if (discountCode && discountOverlay) {
            discountCode.classList.remove('blurred');
            discountCode.classList.add('revealed');
            discountOverlay.classList.add('hidden');
          }
          
          // Show success message
          const button = popupForm.querySelector('button');
          const originalText = button.textContent;
          button.textContent = '{{ section.settings.success_message }}';
          button.style.background = '#10b981';
          
          setTimeout(() => {
            hidePopup();
            button.textContent = originalText;
            button.style.background = '';
            popupForm.reset();
          }, 3000);
        });
      }

      // Initialize popup based on trigger type
      if (settings.triggerType === 'immediate') {
        setTimeout(showPopup, settings.delay);
      } else if (settings.triggerType === 'scroll') {
        window.addEventListener('scroll', handleScroll);
      } else if (settings.triggerType === 'exit_intent') {
        document.addEventListener('mouseout', handleExitIntent);
      }
    })();
  </script>
{% endif %}

